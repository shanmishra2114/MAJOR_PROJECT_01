<% layout("/layout/boilerplate") %>

  <h2 class="text-center my-4">Create a New Listing</h2>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <form method="POST" action="/listing" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" type="text" id="title" placeholder="Enter title" required class="form-control">
          <div class="invalid-feedback">
            Please choose a username.
          </div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" id="description" placeholder="Enter description" rows="3" required
            class="form-control"></textarea>
          <div class="invalid-feedback">
            Please write a short description
          </div>
        </div>
        
        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input name="listing[image]" type="file" id="image" class="form-control">
          required
        </div>

        <div class="row">


          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price (â‚¹)</label>
            <input name="listing[price]" type="text" id="price" placeholder="Enter price" required class="form-control">
            <div class="invalid-feedback">
              Please enter a valid price.
            </div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" type="text" id="country" placeholder="Enter country" required
              class="form-control">
            <div class="invalid-feedback">
              Please choose a valid country name.
            </div>
          </div>

        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" type="text" id="location" placeholder="Enter location" required
            class="form-control">
          <div class="invalid-feedback">
            Please choose a valid location.
          </div>
        </div>



        <button type="submit" class="btn btn-dark w-100 add-btn">Create Listing</button>

        <br><br>
      </form>
    </div>
  </div>